{
  "name": "quiz-absence-io",
  "version": "1.0.0",
  "description": "Quiz Templating and Practice Engine",
  "main": "bin/www",
  "scripts": {
    "build": "rimraf dist/ && babel ./ --out-dir dist/ --ignore ./node_modules,./.babelrc,./package.json,./npm-debug.log --copy-files",
    "test": "jest",
    "start:dev": "NODE_ENV=dev yarn build && nodemon dist/bin/www",
    "start:staging": "NODE_ENV=staging yarn build && node dist/bin/www",
    "start": "NODE_ENV=production yarn build && node dist/bin/www"
  },
  "keywords": [],
  "author": "Oluwapelumi Olaoye",
  "license": "ISC",
  "dependencies": {
    "body-parser": "^1.19.1",
    "dotenv": "^16.0.0",
    "express": "^4.17.3",
    "express-group-routes": "^1.1.0",
    "http": "^0.0.1-security",
    "jest": "^27.5.1",
    "mocha-prepare": "^0.1.0",
    "mongo-unit": "^3.1.0",
    "mongoose": "^6.2.2",
    "morgan": "^1.10.0",
    "nodemailer": "^6.7.2",
    "nodemon": "^2.0.15",
    "path": "^0.12.7",
    "validator": "^13.7.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.17.3",
    "@babel/core": "^7.17.5",
    "@babel/node": "^7.16.8",
    "@babel/plugin-transform-runtime": "^7.17.0",
    "@babel/preset-env": "^7.16.11",
    "@babel/register": "^7.17.0",
    "@babel/runtime": "^7.17.2",
    "babel-preset-es2015": "^7.0.0-beta.3",
    "class-validator": "^0.13.2",
    "rimraf": "^3.0.2",
    "yup": "^0.32.11"
  },
  "nodemonConfig": {
    "watch": [
      "src/*",
      "public/*",
      "app.js"
    ],
    "ignore": [
      "**/specs/**",
      "*.test.js",
      "*.spec.js"
    ]
  },
  "jest": {
    "testEnvironment": "node",
    "testPathIgnorePatterns": [
      "dist"
    ]
  }
}
